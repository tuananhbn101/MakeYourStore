<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10sdp">

   <RelativeLayout
       android:background="@drawable/border_cancle"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="@dimen/_10sdp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Hóa đơn"
               android:textStyle="bold"
               android:textColor="@color/login_hint_color"
               android:textSize="@dimen/_20sdp" />

           <TextView
               android:id="@+id/tvIDHistory"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/_5sdp"
               android:text="01"
               android:textStyle="bold"
               android:textColor="@color/login_hint_color"
               android:textSize="@dimen/_20sdp" />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/llDate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_50sdp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Ngày bán: "
               android:textSize="@dimen/_13sdp" />

           <TextView
               android:id="@+id/tvDateSell"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/_5sdp"
               android:text="01/02/2020"
               android:textSize="@dimen/_13sdp" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/llDate"
           android:id="@+id/sheet"
           android:layout_margin="@dimen/_10sdp"
           android:background="@drawable/border_content_biuld"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/_25sdp"
               android:layout_weight="1.5">

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:text="Tên sản phẩm"
                   android:textSize="@dimen/_13sdp" />

               <TextView
                   android:layout_width="@dimen/_1sdp"
                   android:layout_height="match_parent"
                   android:background="@color/black" />

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="0.5"
                   android:gravity="center"
                   android:text="SL"
                   android:textSize="@dimen/_13sdp" />

               <TextView
                   android:layout_width="@dimen/_1sdp"
                   android:layout_height="match_parent"
                   android:background="@color/black" />

               <TextView
                   android:id="@+id/priceSell"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="0.75"
                   android:gravity="center"
                   android:text="Đơn giá"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/_1sdp"
               android:background="@color/black" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/_80sdp">

               <TextView
                   android:id="@+id/tvNameProductSell"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:text="Tên sản phẩm"
                   android:textSize="@dimen/_13sdp" />

               <TextView
                   android:layout_width="@dimen/_1sdp"
                   android:layout_height="match_parent"
                   android:background="@color/black" />

               <TextView
                   android:id="@+id/tvAmountSell"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="0.5"
                   android:gravity="center"
                   android:text="Số lượng"
                   android:textSize="@dimen/_13sdp" />

               <TextView
                   android:layout_width="@dimen/_1sdp"
                   android:layout_height="match_parent"
                   android:background="@color/black" />

               <TextView
                   android:id="@+id/tvPriceBill"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="0.75"
                   android:gravity="center"
                   android:text="Thành tiền"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

       </LinearLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_marginBottom="@dimen/_10sdp"
           android:layout_below="@+id/sheet"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/_110sdp"
               android:text="@string/total"
               android:textColor="@color/price_color"
               android:textSize="@dimen/_13sdp" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/_15sdp"
               android:text="500000000000"
               android:id="@+id/tvtotalBill"
               android:textColor="@color/price_color"
               android:textSize="@dimen/_13sdp" />
       </RelativeLayout>
   </RelativeLayout>
</RelativeLayout>