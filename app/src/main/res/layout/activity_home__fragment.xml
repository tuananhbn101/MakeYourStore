                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvHotProduct"
                        android:layout_margin="@dimen/_5sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

