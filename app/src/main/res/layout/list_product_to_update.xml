<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/border_cancle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImageProductUp"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_2sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/em908" />

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="#8F8F8F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameProductUp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"


                android:layout_marginTop="@dimen/_5sdp"
                android:singleLine="true"
                android:text="Chuột logitech M320"
                android:textSize="@dimen/_15sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.16"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:text="@string/amount"
                        android:textSize="@dimen/_13sdp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:text=":"
                        android:textSize="@dimen/_13sdp" />


                    <TextView
                        android:id="@+id/tvAmountUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:text="10000"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/btnUpdate"
                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/_50sdp"
                       android:text="Cập nhật"
                       android:gravity="center"
                       android:textSize="@dimen/_12sdp"
                       android:textColor="@color/login_hint_color"
                       android:layout_gravity="center"
                       android:layout_marginRight="@dimen/_5sdp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="/"
                       android:textSize="@dimen/_12sdp"
                       android:layout_gravity="center"
                       android:textColor="@color/black"/>
                   <TextView
                       android:id="@+id/btnDeleteUp"
                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/_50sdp"
                       android:text="@string/delete"
                       android:gravity="center"
                       android:textSize="@dimen/_12sdp"
                       android:textColor="@color/price_color"
                       android:layout_gravity="center"
                       android:layout_marginLeft="@dimen/_5sdp"/>
               </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvPriceUp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Giá: 500000đ"
                android:textColor="@color/price_color"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>