<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/gray_light"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llFind3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/background_main_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etNameProduct1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="0.8"
                android:background="@color/white"
                android:hint="@string/entor_your_name"
                android:inputType="text"
                android:singleLine="true" />
            <ImageView
                android:id="@+id/btnFind1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_baseline_search_24" />
        </LinearLayout>
        <TextView
            android:layout_below="@+id/llFind3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_product"
            android:textSize="@dimen/_13sdp"
            android:layout_margin="@dimen/_10sdp"
            android:textStyle="bold"
            android:id="@+id/tvAllProduct"
            android:textColor="@color/black"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:id="@+id/rvAllProduct"
            android:background="@color/white"
            android:layout_below="@+id/tvAllProduct"/>
    </RelativeLayout>

</layout>